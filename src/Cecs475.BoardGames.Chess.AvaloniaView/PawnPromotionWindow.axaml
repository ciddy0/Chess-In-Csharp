<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cecs475.BoardGames.Chess.AvaloniaView"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Cecs475.BoardGames.Chess.AvaloniaView.PawnPromotionWindow" >
        
        <Border Background="White" Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                <TextBlock Text="Promote pawn to:" FontSize="20" HorizontalAlignment="Center">
                <UniformGrid Columns="4" Rows="1" HorizontalAlignment="Center">
                    <Button x:Name="KnightButton" Content="Knight" Margin="5" Padding="5"/>
                    <Button x:Name="BishopButton" Content="Bishop" Margin="5" Padding="5"/>
                    <Button x:Name="RookButton" Content="Rook" Margin="5" Padding="5"/>
                    <Button x:Name="QueenButton" Content="Queen" Margin="5" Padding="5"/>
                </UniformGrid>
                </TextBlock>        
            </StackPanel>
        </Border>
</Window>
