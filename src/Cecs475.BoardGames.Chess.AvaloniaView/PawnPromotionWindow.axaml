<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cecs475.BoardGames.Chess.AvaloniaView"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Cecs475.BoardGames.Chess.AvaloniaView.PawnPromotionWindow"
        Title="Pawn Promotion" 
        Width="300" 
        FontSize="16"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        CanResize="False">
    <StackPanel>
        <Label>Promote pawn to:</Label>
        <Button Content="Knight" Click="mKnightBtn_Click"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Bishop" Click="mBishopBtn_Click"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Rook"   Click="mRookBtn_Click"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Queen"  Click="mQueenBtn_Click"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
</Window>